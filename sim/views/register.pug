extends layout

block content
  div.mt-6
    section.container
      .container-page
        .col-md-6.mx-auto
          h3.dark-grey Registration
          form(method='POST', action='/register')
            .form-group.col-lg-8
              label Username
              input.form-control(type='' name='username' id='username' value='' placeholder='Username')
            .form-group.col-lg-8
              label Email Address
              input.form-control(type='email' name='email' id='email' value='' placeholder='Email address')
            .form-group.col-lg-8
              label Password
              input.form-control(type='password' name='password' id='password' value='' placeholder='Password')
            .form-group.col-lg-8
              label Confirm Password
              input.form-control(type='password' name='password2' id='password2' value='' placeholder='Confirm Password')
            .col-sm-8
            button.btn.btn-primary(type='submit') Register

      