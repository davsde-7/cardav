extends layout_loggedin

block content
    div.mt-6
        h5 Edit profile      
        style(type='text/css').
            #wrap {
            width:600px;
            margin:0 auto;
            }
            #left_col {
            float:left;
            width:50%;
            }
            #right_col {
            float:right;
            width:50%;
            }
        #wrap
        #left_col
            form(method='POST', action='/users/'+user.username+'/edit/update')
                .form-group.col-lg-8
                label Username
                input.form-control(name='username' id='username' value=''+user.username)
                .form-group.col-lg-8
                label Email
                input.form-control(name='email' id='email' value=''+user.email)  
                br
                .col-sm-8(style="padding-left: 0")
                button.btn.btn-primary(type="submit") Update user
            br
            form(method='POST', action='/users/'+user.username+'/edit/delete')
                .col-sm-8(style="padding-left: 0")
                button#view.btn.btn-danger(type="submit") Delete user
            

        #right_col
            img(style="display: block;width: 50%;" src="../../images/"+user.username+".png")
            br
            if userData.username==user.username || userData.role=="manager"
                h7 #[strong Update picture]
                form(method='post' enctype='multipart/form-data' action='./'+user.username+'/upload')
                    label(for='img') Select picture: &nbsp;
                    input#img(type='file' name='image' accept='image/*')
                    br
                    input(type='submit' value='Upload')

                script.
                    function blockChange() {
                        var x = document.getElementById("block").value;
                        document.getElementById("blockoutput").value = x;
                    }

        
